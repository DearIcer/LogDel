<Window x:Class="日志删除工具.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:日志删除工具"
        xmlns:viewmodels="clr-namespace:日志删除工具.ViewModels"
        mc:Ignorable="d"
        Title="日志删除工具" Height="700" Width="900">
    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" Text="日志删除工具" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- 目录配置区域 -->
        <GroupBox Grid.Row="1" Header="日志目录配置" Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Content="添加目录" Command="{Binding AddDirectoryCommand}" 
                            Padding="10,5" Margin="0,0,10,0"/>
                </StackPanel>

                <DataGrid Grid.Row="1" ItemsSource="{Binding LogDirectories}" 
                          AutoGenerateColumns="False" CanUserAddRows="False"
                          HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="启用" Binding="{Binding IsEnabled}" 
                                              Width="60"/>
                        <DataGridTextColumn Header="目录路径" Binding="{Binding Path}" 
                                          Width="*"/>
                        <DataGridTemplateColumn Header="操作" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="删除" 
                                            Command="{Binding DataContext.RemoveDirectoryCommand, 
                                                    RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                            CommandParameter="{Binding}"
                                            Padding="5,2" Background="LightCoral" Foreground="White"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <!-- 结果显示区域 -->
        <GroupBox Grid.Row="2" Header="上次清理结果" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="10">
                    <TextBlock Text="删除文件数量:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding LastCleanupResult.DeletedFilesCount}" 
                               FontSize="16" Foreground="Green"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10">
                    <TextBlock Text="删除总大小:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding LastCleanupResult.TotalSizeDeleted}" 
                               FontSize="16" Foreground="Green"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="10">
                    <TextBlock Text="清理时间:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding LastCleanupResult.CleanupTime, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" 
                               FontSize="16" Foreground="Green"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- 操作按钮 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,20">
            <Button Content="立即清理" Command="{Binding CleanupLogsCommand}" 
                    Padding="20,10" Background="DodgerBlue" Foreground="White" 
                    IsEnabled="{Binding IsCleaningUp, Converter={StaticResource InverseBooleanConverter}}"/>
            <TextBlock Text="清理中..." VerticalAlignment="Center" Margin="10,0" 
                       Visibility="{Binding IsCleaningUp, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </StackPanel>

        <!-- 历史记录区域 -->
        <GroupBox Grid.Row="4" Header="清理历史记录">
            <DataGrid ItemsSource="{Binding CleanupHistory}" 
                      AutoGenerateColumns="False" CanUserAddRows="False"
                      HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="清理时间" Binding="{Binding CleanupTime, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" 
                                        Width="*"/>
                    <DataGridTextColumn Header="删除文件数" Binding="{Binding DeletedFilesCount}" 
                                        Width="*"/>
                    <DataGridTextColumn Header="删除大小(字节)" Binding="{Binding TotalSizeDeleted}" 
                                        Width="*"/>
                    <DataGridTextColumn Header="状态" 
                                        Binding="{Binding ErrorMessage, TargetNullValue=成功}" 
                                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</Window>